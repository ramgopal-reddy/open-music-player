<Window x:Class="MyMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="1080"
        Width="1920"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        WindowState="Maximized" 
        WindowStyle="None"
        ResizeMode="NoResize">
    

    <!-- Rotation animation -->
    <Window.Resources>
        <Storyboard x:Key="RotateStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="AlbumRotate"
                Storyboard.TargetProperty="Angle"
                From="0"
                To="360"
                Duration="0:0:16"
                RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Background>
        <ImageBrush
                    Stretch="Fill"
                    TileMode="None"
                    AlignmentX="Center">
            <ImageBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="270" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ImageBrush.RelativeTransform>
        </ImageBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0"
              Background="#22000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                   Text="My Music Player"
                   FontSize="32"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            <!--<Button Grid.Row="1"
                    Content="X"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"
                    Click="ToggleControls_Click"/>-->
            <ComboBox Width="100"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
          SelectionChanged="Background_SelectionChanged"
                      Grid.Row="1" BorderBrush="#00000000">
                <ComboBoxItem Content="Spider Man" Tag="/MyMusic/Resources/spyderman.jpg"/>
                <ComboBoxItem Content="JD Master" Tag="/MyMusic/Resources/JD.jpg"/>
                <ComboBoxItem Content="JackSparrow" Tag="/MyMusic/Resources/JackSparrow.jpg"/>
            </ComboBox>

        </Grid>
      

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT: ROTATING DISC -->
            <Grid Grid.Column="0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">

                <Image Source="/Resources/music_note.png"
                       RenderTransformOrigin="0.5,0.5"
                       Opacity="0.75">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="AlbumRotate"/>
                    </Image.RenderTransform>
                </Image>

                <Ellipse Width="280"
                         Height="280">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="AlbumImageBrush"
                                    ImageSource="/Resources/music_note.png"
                                    Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Image Source="/Resources/needle.png"
       Width="160"
       Height="240"
       HorizontalAlignment="Right"
       VerticalAlignment="Bottom"
       RenderTransformOrigin="0.5,0.5">

                    <Image.RenderTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="NeedleRotate" Angle="0"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

            </Grid>

            <!-- RIGHT SIDE -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!--<StackPanel Grid.Row="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="TitleText"
                               FontSize="45"
                               Foreground="White"
                               FontFamily="Baskerville Old Face"
                               Text="HI"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="ArtistText"
                               FontSize="27"
                               Foreground="#AAAAAA"
                               Text="Bye"
                               FontFamily="BankGothic Lt BT"
                               TextAlignment="Center"/>
                </StackPanel>-->

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                        <TextBlock
           Grid.Row="0"
           FontSize="20"
           Foreground="#AAAAAA"
           Text="Artist Name"
           FontFamily="BankGothic Lt BT"
           TextAlignment="Center"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ArtistText"
                               Grid.Row="1"
                               FontSize="45"
                               Foreground="White"
                               FontFamily="Baskerville Old Face"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"/>
                     </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                            <TextBlock
                                       Grid.Row="0"
                                       FontSize="20"
                                       Foreground="#AAAAAA"
                                       Text="Song Name"
                                       FontFamily="BankGothic Lt BT"
                                       TextAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TitleText"
                               Grid.Row="1"
                               FontSize="27"
                               Foreground="White"
                               FontFamily="Bauhaus 93"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"/>
                    </Grid>
                    

                    
                    
                </Grid>

                <!--<Image Grid.Row="1"
                       Source="/Resources/katana1.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>-->
                <!--<ListBox Grid.Row="1" UseLayoutRounding="True" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}">
                    <ListBox.Style>
                        <Style/>
                    </ListBox.Style>
                </ListBox>-->

                <!--<StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="10" Grid.Row="1">

                    <Button Click="Background_Click" Tag="/MyMusic/Resources/JD.jpg" Background="{x:Null}">
                        <Image Source="/Resources/JD.jpg" Width="80" Height="45"/>
                    </Button>

                    <Button Click="Background_Click" Tag="/MyMusic/Resources/JohnWick.jpg" Margin="10,0" Background="{x:Null}">
                        <Image Source="/Resources/JohnWick.jpg" Width="80" Height="45"/>
                    </Button>

                    <Button Click="Background_Click" Tag="/MyMusic/Resources/VijayThalapathyJDMaster.jpg" Background="{x:Null}">
                        <Image Source="/Resources/VijayThalapathyJDMaster.jpg" Width="80" Height="45"/>
                    </Button>

                    <Button Click="Background_Click" Tag="/MyMusic/Resources/SSMB.jpg" BorderBrush="Black" Background="{x:Null}">
                        <Image Source="/Resources/SSMB.jpg" Width="80" Height="45"/>
                    </Button>

                </StackPanel>-->
                <ListBox x:Name="PlaylistList"
         Grid.Row="1"
         Width="400"
         Height="250"
         Margin="20"
         SelectionChanged="PlaylistList_SelectionChanged"
         Background="#22000000"
         Foreground="White"/>


            </Grid>
        </Grid>

        <!-- FOOTER CONTROLS -->
        <StackPanel x:Name="ControlsPanel"
                    Visibility="Visible"
                    Grid.Row="2" Margin="0,20">

            <Slider x:Name="SeekSlider"
                    Minimum="0"
                    ValueChanged="SeekSlider_ValueChanged"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button Content="Play" Width="70" Margin="5" Click="Play_Click"/>
                <Button Content="Pause" Width="70" Margin="5" Click="Pause_Click"/>
                <Button Content="Stop" Width="70" Margin="5" Click="Stop_Click"/>
                <Button Content="Toggle" Width="70" Margin="5" Click="ToggleControls_Click"/>
                <Button Content="Add Songs"
        Width="90"
        Margin="5"
        Click="AddSongs_Click"/>
                <Button x:Name="LoopBtn"
        Content="No Loop"
        Width="90"
        Margin="5"
        Click="LoopBtn_Click"/>


                <!-- FULL SCREEN BUTTON (ADDED) -->
                <Button Content="Full Screen"
                        Width="100"
                        Margin="5"
                        Click="ToggleFullScreen_Click"/>
                <Button Content="Full"
                        Width="70"
                        Margin="5"
                        Click="ToggleFullScreen"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Volume"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <Slider x:Name="VolumeSlider"
                        Width="150"
                        Minimum="0"
                        Maximum="1"
                        Value="1"
                        ValueChanged="VolumeSlider_ValueChanged"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
